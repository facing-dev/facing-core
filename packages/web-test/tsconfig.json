{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "..",
        "rootDir": "..",
        "jsx": "preserve",
        "emitDeclarationOnly":true,
        "paths": {
            "@scheduler/*": [
                "scheduler/src/*"
            ],
            "@observer/*": [
                "observer/src/*"
            ],
            "@simler-core/*": [
                "simler-core/src/*"
            ],
        },
 
    },
    "include": [
        "../*/src/**/*.ts",
        "../*/src/**/*.tsx",
    ],
    "exclude": [
        "../*/node_modules",
        "../*/dist"
    ]
}
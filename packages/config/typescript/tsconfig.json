{
  "compilerOptions": {
    "moduleResolution": "node",

    "module": "ESNext",
    "target": "ES6",

    "strict": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "emitDeclarationOnly":false,

    "experimentalDecorators": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": false
    
  },

}